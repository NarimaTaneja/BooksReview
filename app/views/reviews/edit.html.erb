<div class="col-md-6 col-md-offset-3">
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading text-center">
				<h1>Edit Review</h1>
			</div>
			<div class="panel-body">
				<%= simple_form_for([@book,@review], html: {class: 'form-horizontal', multipart: true}) do |f| %>

					<div class="form-group">
						<label class="control-label col-sm-2" for="rating">
							<%= f.label :rating %>
						</label>
						<div class="col-sm-8">
							<%= f.text_field :rating, class: "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<label class="control-label col-sm-2" for="comment">
							<%= f.label :comment %>
						</label>
						<div class="col-sm-8">
							<%= f.text_field :comment ,class: "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-sm-2 col-md-offset-5">
							<%= f.submit 'Submit',class: "btn btn-default" %>
						</div>
					</div>
				<% end %>
			</div>
			<div class ="panel-footer">
				<div class="col-md-offset-10">
					<%= link_to 'Cancel' , book_path(@book), class: "btn btn-default" %>
				</div>
			</div>
		</div>
	</div>
</div>