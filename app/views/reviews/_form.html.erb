<%= simple_form_for([@book,@book.reviews.build], html: {class: 'form-horizontal', multipart: true}) do |f| %>

	<div class="form-group">
		<label class="control-label col-sm-2" for="rating">
			<%= f.label :rating %>
		</label>
		<div class="col-sm-8">
			<%= f.text_field :rating, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-2" for="comment">
			<%= f.label :comment %>
		</label>
		<div class="col-sm-8">
			<%= f.text_field :comment ,class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-2 col-md-offset-5">
			<%= f.submit 'Submit',class: "btn btn-default" %>
		</div>
	</div>
<% end %>

