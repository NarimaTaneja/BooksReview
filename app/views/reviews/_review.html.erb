<div class="reviews">
	<div class="row">
		<div class="col-sm-2">
			<% if session[:no] == 1 %>
			<% @user = User.where(id: review.user_id).first %>
				<%= image_tag @user.image.url(:tiny), class: "book_show" %>	
			<% elsif session[:no] == 2 %>
				<% @book = Book.where(id: review.book_id).first %>	
				<%= image_tag @book.image.url(:tiny), class: "book_show" %>	
			<% end %>
		</div>
		<div class="col-sm-8">
			<% if session[:no] == 1 %>
			<ph><%= User.where(id: review.user_id).first.first_name%> </ph>
			<% elsif session[:no] == 2 %>
				<% @book = Book.where(id: review.book_id).first %>
				<ph>Book : <%= @book.name %></ph><br>
			<% end %>
				<p1>Rated it</p1><div class="review-rating" data-score="<%= review.rating %>"></div>
				<p1>Comment : <%= review.comment %></p1><br>
		</div>
	</div>
	<% if current_user %>
		<% if review.user_id == current_user.id %>
			<div class="links col-md-offset-4">
				<%= link_to 'Edit', edit_book_review_path(review.book, review) ,class: "btn btn-primary" %> |
				<%= link_to 'Delete', book_review_path(review.book, review), method: :delete, data:{confirm: "Are you sure want to delete?"}, class: "btn btn-primary" %>
			</div>
		<% end %>
	<% end %>
</div>


